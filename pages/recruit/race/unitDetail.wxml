<!-- 组队答题 -->
<block wx:if="{{eventType == 3}}">
    <view class="bg-white padding-lg">
        <view class="flex align-center">
            <view class="cu-avatar round lg bg-blue">{{user.name[0]}}</view>
            <view class="padding-left-sm">
                <view class="margin-bottom-sm text-sp">{{user.name}}</view>
                <view class="cu-tag bg-{{user.score>=60?'blue':'red'}} light round">
                    分数: {{user.score}}
                </view>
            </view>
        </view>
    </view>
    <view class="margin-top-sm bg-white text-sp">
        <view class="flex align-center height-sp padding-lr-lg margin-bottom-sm">
            <image src="{{imgUrl}}org/icon_teacher.png" style="width:40rpx;" mode="widthFix" />
            <view class="margin-left-sm text-sp text-bold">队伍成员</view>
        </view>
        <view class="padding-tb-lg flex align-center justify-around">
            <view wx:for="{{user.teamMember}}" wx:key="userId">
                <view class="cu-avatar round lg" style="background-image:url({{item.avatarUrl}});"></view>
                <view class="margin-top-sm text-sp text-center">{{item.nickName}}</view>
            </view>
        </view>
    </view>
    <view class="margin-top-sm bg-white text-sp">
        <view class="flex align-center height-sp solid-bottom padding-lr-lg">
            <image src="{{imgUrl}}eval/icon_report.png" style="width:40rpx;" mode="widthFix" />
            <view class="margin-left-sm text-sp text-bold">活动参与情况</view>
        </view>
        <view class="margin-left-lg">
            <view wx:for="{{user.teamMember}}" wx:key="*this" class="padding-tb-lg  flex align-center justify-between padding-right-lg {{index == user.teamMember.length -1?'':'solid-bottom'}}">
                <view class="flex align-center">
                    <view class="text-bold margin-right">{{item.nickName}}</view>
                    <view class="text-sp text-bold text-yellow">+{{item.score}}分</view>
                </view>
                <view class="text-sm colorT-sp">{{item.created_at}}</view>
            </view>
        </view>
    </view>
</block>
<!-- 抽奖 -->
<block wx:else>
    <view class="bg-white padding-lg">
        <view class="flex align-center">
            <view class="cu-avatar round lg" style="background-image:url({{user.avatarUrl}});"></view>
            <view class="padding-left-sm">
                <view class="margin-bottom-sm text-sp">{{user.nickName}}</view>
                <view class="cu-tag bg-red light round">抽奖次数: {{user.records.length}}</view>
            </view>
        </view>
    </view>
    <view class="margin-top-sm bg-white text-sp">
        <view class="flex align-center height-sp solid-bottom padding-lr-lg">
            <image src="{{imgUrl}}eval/icon_report.png" style="width:40rpx;" mode="widthFix" />
            <view class="margin-left-sm text-sp text-bold">活动参与情况</view>
        </view>
        <view class="margin-left-lg">
            <view wx:for="{{user.records}}" wx:key="*this" class="padding-tb-lg  flex align-center justify-between padding-right-lg {{index == list.length -1?'':'solid-bottom'}}">
                <view class="text-sp">
                    <view class="text-bold">{{item.AwardName}}</view>
                    <view class="colorT-sp margin-top-xs">{{item.hasGet == 0?'未领取':'已领取'}}</view>
                </view>
                <view class="text-sm colorT-sp">{{item.created_at}}</view>
            </view>
        </view>
    </view>
</block>