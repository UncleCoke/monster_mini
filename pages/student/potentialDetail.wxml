<view class="page-sp padding-top-sm">
    <view class="bg-white text-sp margin-bottom-sm">
        <view class="flex align-center padding-tb padding-lr-lg">
            <image src="{{imgUrl}}icon_user.png" style="width:32rpx;" mode="widthFix" />
            <view class="margin-left-sm text-sp text-bold">生源信息</view>
        </view>
        <view class="padding-lg height-sp solid-bottom flex align-center">
            <view class="margin-right-lg">学生昵称</view>
            <view>{{info.nickName}}</view>
        </view>
        <view class="padding-lg height-sp solid-bottom flex align-center justify-between">
            <view class="flex align-center">
                <view class="margin-right-lg">手机号码</view>
                <view>{{info.phone}}</view>
            </view>
            <button class="cu-btn bg-blue sm round" bindtap="call">拨打</button>
        </view>
        <view class="padding-lg height-sp solid-bottom flex align-center justify-between">
            <view class="flex align-center">
                <view class="margin-right-lg">来源途径</view>
                <view>{{info.from == 1?'活动':info.from == 2?'评测':'班级'}}</view>
            </view>
            <button class="cu-btn bg-olive sm round" wx:if="{{info.from == 2}}">查看报告</button>
        </view>
        <view class="padding-lg height-sp solid-bottom flex align-center">
            <view class="margin-right-lg">状态</view>
            <view>
                <text class="cuIcon-title {{statusList[info.status - 1].color}}"></text>
                {{statusList[info.status - 1].title}}
            </view>
        </view>
        <view class="padding-lg height-sp flex align-center">
            <view class="margin-right-lg">意向程度</view>
            <view>
                <text class="cuIcon-title {{info.degree == '低'?'text-red':info.degree == '中'?'text-yellow':'text-green'}}"></text>
                {{info.degree}}
            </view>
        </view>
    </view>
    <view class="bg-white text-sp padding-lr-lg">
        <view class="flex align-center padding-top padding-bottom-lg">
            <image src="{{imgUrl}}icon_record.png" style="width:40rpx;" mode="widthFix" />
            <view class="margin-left-sm text-sp text-bold">跟踪记录</view>
        </view>
        <block wx:for="{{info.records}}" wx:key="id">
            <view class="flex align-center">
                <text class="cuIcon-radioboxfill text-blue" style="font-size:24rpx;"></text>
                <view class="margin-left-sm text-sm colorF-sp">{{item.created_at}}</view>
            </view>
            <view class="timeline">
                <view class="panel padding-lr-lg padding-tb">
                    <view class="flex align-center justify-between margin-bottom-sm">
                        <view class="flex align-center">
                            <view class="text-bold text-sp margin-right-sm">{{item.teacherName}}</view>
                            <view class="text-sm">
                                <text class="cuIcon-title {{statusList[item.status - 1].color}}"></text>
                                {{statusList[item.status - 1].title}}
                            </view>
                        </view>
                        <image src="{{imgUrl}}{{item.action == 1?'icon_make':item.action == 2?'icon_wechat':'icon_mail'}}.png"  mode="widthFix"  style="width:{{item.action == 2?42:32}}rpx;"/>
                    </view>
                    <view class="text-sm colorF-sp" style="line-height:36rpx;">{{item.content}}</view>
                </view>
            </view>
        </block>
    </view>
</view>
<view class="cu-bar bg-white tabbar border shop foot">
    <view class="btn-group">
        <button class="cu-btn lg bg-blue submit margin-tb-sm margin-lr sp" bindtap="follow">新增跟进</button>
    </view>
</view>