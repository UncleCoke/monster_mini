<view style="padding-bottom:200rpx;">
    <view class="bg-white text-sp padding-lg">
        <view class="flex align-center justify-between  padding-bottom-sm">
            <view class="flex align-center">
                <image src="{{imgUrl + (eval.subject === '语文'?'icon_chinese':eval.subject === '数学'?'icon_math':'icon_english')+'.png'}}" style="width:40rpx;" mode="widthFix" />
                <view class="margin-left-sm text-sp text-bold">
                    {{eval.subject}} {{eval.textbook}} {{eval.evalType == 2?'期末测评':(eval.evalType == 1?'期中测评':'单元评测')}}
                </view>
            </view>
            <view class="cu-tag bg-{{eval.evalRange == 1?'cyan':'blue'}} light round">
                {{eval.evalRange == 1?'个人评测':eval.class.name}}
            </view>
        </view>
        <view class="panel margin-top-sm padding-lg" wx:for="{{users}}" wx:key="userId" data-id="{{item.id}}" data-user="{{item.userId}}" data-index="{{index}}" data-token="{{item.token}}" bind:tap="report">
            <view class="flex align-center justify-between margin-bottom-sm">
                <view class="flex align-center">
                    <view class="cu-avatar round lg" style="background-image:url({{item.avatarUrl}});"></view>
                    <view class="padding-left-sm">
                        <view class="margin-bottom-sm">{{item.nickName}}</view>
                        <view class="cu-tag bg-{{item.score>=60?'green':'red'}} light round">
                            分数: {{item.score}}
                        </view>
                        <view class="cu-tag bg-olive light round">耗时: {{item.spendTime}}秒</view>
                    </view>
                </view>
                <view class="cuIcon-right text-lg" style="color:#ccc"></view>
            </view>
            <view class="text-time text-sm">最后答题时间：{{item.created_at}}</view>
        </view>
    </view>
    <view class="padding flex justify-between align-center solid-top bg-white">
        <view class='text-gray text-sm'>{{eval.finishCount}}人完成</view>
    </view>
</view>
<view class="cu-bar bg-white tabbar border shop foot">
    <view class="btn-group">
        <button class="cu-btn bg-white round submit margin-xs" bind:tap="back">返回</button>
    </view>
</view>