<view style="padding-bottom:200rpx;">
    <view class="padding-top padding-lr shadow" wx:for="{{list}}" wx:key="list" id="main-{{index}}">
        <view class='cu-bar solid-bottom bg-white'>
            <view class='action'>
                <text class="text-black margin-right-xs">{{item.subject}}</text>
                        {{item.textbook}} {{item.evalType == 2?'期末测评':(item.evalType == 1?'期中测评':'单元评测')}}
            </view>
            <view class="cu-tag bg-{{item.evalRange == 1?'cyan':'blue'}} light round sm margin-right">{{item.evalRange == 1?'个人评测':item.class.name}}</view>
        </view>




        <view class="cu-list menu-avatar">
            <block wx:for="{{item.users}}" wx:key="user" wx:for-item="user" wx:for-index="userIndex">
                <view class="cu-item solid-bottom" data-id="{{user.id}}" data-user="{{user.userId}}" data-token="{{user.token}}" data-userindex="{{userIndex}}" data-index="{{index}}" bind:tap="report">
                <view wx:if="{{user.avatarUrl}}" class="cu-avatar round lg" style="background-image:url({{user.avatarUrl}});"></view>
                <view wx:else class="cu-avatar round lg {{user.level?'bg-gradual-orange':'bg-blue'}}">
                    {{user.nickName[0]}}
                </view>
                <view class="content">
                    <view class="text-grey text-sm">{{user.nickName}}</view>
                    <view class="text-grey">
                        <view class="cu-capsule radius">
                            <view class="cu-tag bg-{{user.score>=60?'green':'red'}} sm">分数</view>
                            <view class="cu-tag line-{{user.score>=60?'green':'red'}} sm">{{user.score}}</view>
                        </view>
                        <view class="cu-capsule radius">
                            <view class="cu-tag bg-olive sm">耗时</view>
                            <view class="cu-tag line-olive sm">{{user.spendTime}}秒</view>
                        </view>
                        <view class="text-grey text-xs">{{user.created_at}}</view>
                    </view>
                </view>
                <view class="action">
                    <view class="cuIcon-right text-gray"></view>
                </view>
            </view>

            </block>
            
            
        </view>
        <view  class="padding flex justify-between align-center bg-white">
            <view class='text-gray text-sm'>{{item.finishCount}}人完成</view>
            <button class="cu-btn sm line-blue" data-id="{{item.id}}" bind:tap="reportList" wx:if="{{item.finishCount>5}}">
                查看全部
                <text class='cuIcon-right  margin-left-xs'></text>
            </button>
        </view>


    </view>
</view>
<view class="cu-bar bg-white tabbar border shop bottom">
    <view class="btn-group">
        <button class="cu-btn bg-white round submit margin-xs" bind:tap="back">返回</button>
        <!-- <button class="cu-btn bg-blue light round submit margin-xs" bind:tap="add">写评语</button> -->
    </view>
</view>